<!DOCTYPE HTML>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8">
        <title>{% block title %}Liga Solidaria Storage{% endblock %}</title>

        <!-- Loading Bootstrap -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/bootstrap.css">

        <!-- Loading Flat UI -->
        <link rel="shortcut icon" href="/images/favicon.ico">

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
        <!--[if lt IE 9]><script src="/js/html5shiv.js"></script><![endif]-->
    </head>
    <body>
    	{% if message is defined and message %}
            <div class="alert alert-error">{{ message|raw }}</div>
        {% endif %}
        <div class="container">
            <img class ="logo" src="/images/img-logo.png">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Acesso Restrito</h3>
                    </div>
                    {% if message is defined and message %}
                        <div class="alert alert-danger">{{ message|raw }}</div>
                    {% endif %}
                    <div class="panel-body">
                        <form action="/login" method="post" accept-charset="utf-8" role="form">
                            <div class="form-group">
                                <label for="email">E-mail</label>
                                <input type="email" class="form-control" name="email" value="" id="email" placeholder="E-mail">
                            </div>
                            <div class="form-group">
                                <label for="password">Senha</label>
                                <input type="password" class="form-control" name="password" value="" id="password" placeholder="Senha">
                            </div>

                            <input type="submit" name="login" value="Login" class="btn btn-default pull-right">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% include "elements/footer.html.twig" %}
        {% include "elements/script.html.twig" %}
    </body>
</html>
